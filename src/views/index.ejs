<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.js basic</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <!-- <h1>hello world from ejs dhsaj</h1> -->
        <div class="topnav">
            <a class="active" href="#home">Home</a>
            <a class="btn-hide" href="#news">News</a>
            <a class="btn-hide" href="#contact">Contact</a>
            <a class="btn-hide"href="#about">About</a>
        </div>

        <div class="content">
            <div style="padding-left:16px; width: 800px ">
                <h2>List Users</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0;i<dataUsers.length; i++){ %>
                            <tr>
                                <td>
                                    <%= dataUsers[i].id %>
                                </td>
                                <td>
                                    <%= dataUsers[i].firstName %>
                                </td>
                                <td>
                                    <%= dataUsers[i].lastName %>
                                </td>
                                <td class="btn">
                                    <button class="btn-detail"><a href="/detail/user/<%= dataUsers[i].id%>" target="_blank">Detail</a></button>
                                    <form action="/edit/<%= dataUsers[i].id%>" method="GET">
                                        <button type="submit" class="btn-edit">Edit</button>
                                    </form>
                                    <form action="/delete-user" method="POST">
                                        <input type="text" hidden value="<%= dataUsers[i].id%>" name="userID"/>
                                        <button class="btn-delete" type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
    
            <div class="create-user-container">
                <form action="/create-new-user", method="POST">
                    <div class="form-title">Create a new user</div>
                    <div class="inputbox">
                        <input type="text" required name="firstName">
                        <label for="">First Name</label>
                    </div>
                    <div class="inputbox">
                        <input type="text" required name="lastName">
                        <label for="">Last Name</label>
                    </div>
                    <div class="inputbox">
                        <input type="text" required name="email">
                        <label for="">Email</label>
                    </div>
                    <div class="inputbox">
                        <input type="text" required name="address">
                        <label for="">Address</label>
                    </div>
                    <button type="submit" class="btn-add">Add</button>
                </form>
            </div>
        </div>

    </div>
</body>

</html>