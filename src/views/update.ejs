<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.js basic</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div>
        <div style="margin:30px auto;"class="create-user-container">
            <form action="/update-user" , method="POST">
                <div class="form-title">Update user</div>
                <div class="inputbox">
                    <input type="text" required name="firstName" value="<%= user.firstName%>">
                    <label for="">First Name</label>
                </div>
                <div class="inputbox">
                    <input type="text" required name="lastName" value="<%= user.lastName%>">
                    <label for="">Last Name</label>
                </div>
                <div class="inputbox">
                    <input type="text" required name="email" value="<%= user.email%>">
                    <label for="">Email</label>
                </div>
                <div class="inputbox">
                    <input type="text" required name="address" value="<%= user.address%>">
                    <label for="">Address</label>
                </div>
                <input type="text" hidden value="<%= user.id%>" name="id"/>
                <button type="submit" class="btn-edit">Update</button>
                <button class="btn-cancel"><a href="/">Cancel</a></button>
            </form>
        </div>
    </div>
</body>

</html>