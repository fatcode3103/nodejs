<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.js basic</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div>
        <h1>Details</h1>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <%= data.id%>
                    </td>
                    <td>
                        <%= data.firstName%>
                    </td>
                    <td>
                        <%= data.lastName%>
                    </td>
                    <td>
                        <%= data.email%>
                    </td>
                    <td>
                        <%= data.address%>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>

</html>